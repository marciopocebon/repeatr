#!/bin/bash
set -e

# Where is this script located?
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$DIR"
export GOPATH="$PWD"/.gopath/
export BASEDIR="$PWD"

# Highlights build failures. Setting to '^' will disable, could make configurable.
highlighRegex='^|^# (.*/)+.*$'

# subsection arg?
[ -z "$2" ] && SUBSECTION="./..." || SUBSECTION="./$2"


# Project details
name="repeatr"
pkg="polydawn.net/$name"

if [ -z "$1" ] ; then
	(
		go fmt "$SUBSECTION"
		go install "$pkg"     2> >(grep --color -E "$highlighRegex")
		go test "$SUBSECTION" 2> >(grep --color -E "$highlighRegex")
	)
else
	case "$1" in
	-)
		# passthrough for other commands
		shift
		go "$@"
		;;
	env)
		echo "GOROOT=`go env GOROOT`"
		echo "GOPATH=`go env GOPATH`"
		;;
	path)
		echo "$GOPATH"
		;;
	init)
		# it's your responsibility to do this the first time
		# (we don't do it at the front of every build because it will move submodules if you already have them, and that might not be what you want as you're plowing along)
		git submodule update --init
		;;
	test)
		go test -i "$SUBSECTION" 2> >(grep --color -E "$highlighRegex") &&
		go test -v "$SUBSECTION" 2> >(grep --color -E "$highlighRegex")
		;;
	install)
		go install "$pkg" 2> >(grep --color -E "$highlighRegex")
		;;
	fmt)
		go fmt "$SUBSECTION"
		;;
	doc)
		for package in $(go list "$SUBSECTION" | sed "s#^_${PWD}#${pkg}#"); do
			echo -e "==== $package ====\n"
			godoc "$package"
			echo -e "\n\n\n"
		done
		;;
	convey)
		shift
		go install github.com/smartystreets/goconvey && "$GOPATH"/bin/goconvey "$@"
		;;
	errcheck)
		shift
		# errcheck shoots itself if GOROOT is not explictly set -.-
		# We could set GOROOT globally up top, the way we set GOPATH.
		# also, absolute folder paths. we has them. so many. fire the sed cannons. and just... cannons.
		go install github.com/kisielk/errcheck && GOROOT=`go env GOROOT` "$GOPATH"/bin/errcheck "$@" 2>&1 | sed -e "s|${GOPATH}src/||"
		;;
	cover)
		coverFile="$GOPATH/tmp/cover/cover.out"
		mkdir -p "$(dirname "$coverFile")"
		for package in $(go list "$SUBSECTION" | sed "s#^_${PWD}#${pkg}#"); do
			rm -f "$coverFile"
			echo "==== $package ===="
			go test -coverprofile="$coverFile" "$package" && \
			[ -f "$coverFile" ] && \
			echo ---- && \
			go tool cover -func="$coverFile" && \
			echo ---- && \
			go tool cover -html="$coverFile"
			echo ====
			echo
		done
		rm -f "$coverFile"
		;;
	validate)
		# run all validations and exit non-zero after all of them if any fail
		validators=()
		validators+=("./contrib/validate-dco")
		validators+=("./contrib/validate-gofmt")
		invalid=""
		for validator in ${validators[@]}; do
			echo -e "\E[1;34m==== checking $validator ... ====\E[0;m"
			"$validator" && {
				echo -e "\E[1;32mpassed.\E[0;m"
			} || {
				echo -e "\E[1;31mfailed!\E[0;m"
				invalid="true"
			}
			echo
			echo
		done
		echo
		[ -z "$invalid" ] && {
			echo -e "\E[1;32mall validations green.\E[0;m"
		} || {
			echo -e "\E[1;41msome validations failed!\E[0;m"
			exit 6
		}
		;;
	clean)
		rm -rf $GOPATH/bin $GOPATH/pkg
		;;
	exec)
		shift
		PATH=$PWD/assets:$PATH $GOPATH/bin/$name "$@"
		;;
	*)
		echo "Usage: $0 {init|test|install|fmt|doc|convey|errcheck|cover|validate|clean}" 1>&2;
		exit 1
	;;
esac

fi
